{
  "name": "classic-card-table-games",
  "displayName": "Classic Card & Table Games",
  "description": "Play classic Vegas games right in VS Code - Blackjack, Texas Hold'em Poker, Baccarat, Slots, Roulette, and Pai Gow Poker. For fun only!",
  "version": "1.0.3",
  "author": "Alpha Romer Coma <alpharomercoma@proton.me>",
  "publisher": "alpharomercoma",
  "repository": {
    "type": "git",
    "url": "https://github.com/alpharomercoma/vegas-games-extension"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "games",
    "blackjack",
    "poker",
    "roulette",
    "slots",
    "baccarat"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "media/icons/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "vegasGames.openPanel",
        "title": "Open Vegas Games",
        "category": "Vegas Games",
        "icon": "$(game)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vegas-games",
          "title": "Vegas Games",
          "icon": "media/icons/games.svg"
        }
      ]
    },
    "views": {
      "vegas-games": [
        {
          "type": "webview",
          "id": "vegasGames.sidebar",
          "name": "Games Lobby"
        }
      ]
    },
    "configuration": {
      "title": "Vegas Games",
      "properties": {
        "vegasGames.soundEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable sound effects"
        },
        "vegasGames.musicEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable background music"
        },
        "vegasGames.volume": {
          "type": "number",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "Master volume (0-100)"
        },
        "vegasGames.startingBalance": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 100000,
          "description": "Starting chip balance for new games"
        },
        "vegasGames.rouletteType": {
          "type": "string",
          "default": "european",
          "enum": [
            "european",
            "american"
          ],
          "enumDescriptions": [
            "European Roulette (single zero)",
            "American Roulette (double zero)"
          ],
          "description": "Roulette wheel type"
        },
        "vegasGames.blackjackDecks": {
          "type": "number",
          "default": 6,
          "enum": [
            1,
            2,
            4,
            6,
            8
          ],
          "description": "Number of decks used in Blackjack"
        },
        "vegasGames.pokerDifficulty": {
          "type": "string",
          "default": "normal",
          "enum": [
            "easy",
            "normal",
            "hard"
          ],
          "description": "AI difficulty for Texas Hold'em"
        },
        "vegasGames.theme": {
          "type": "string",
          "default": "classic",
          "enum": [
            "classic",
            "neon",
            "dark"
          ],
          "enumDescriptions": [
            "Classic green felt",
            "Neon Vegas lights",
            "Dark luxury theme"
          ],
          "description": "Visual theme for the games"
        },
        "vegasGames.autoSaveBalance": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save chip balance between sessions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  }
}
